<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ContactWeb</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary">
            <div class="container-fluid">
                @Html.ActionLink("Contact Web 2019", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @Html.Partial("_LoginPartial")
                    <ul class="navbar-nav flex-grow-1">
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index"
                            && ViewContext.RouteData.Values["Controller"].ToString() == "Home"
                            ? "nav-item active": "nav-item")">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-light" })
                        </li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "About"
                            ? "nav-item active" : "nav-item")">
                            @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link text-light" })
                        </li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact"
                            ? "nav-item active" : "nav-item")">
                            @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link text-light" })
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "States"
                             ? "nav-item active" : "nav-item")">
                                @Html.ActionLink("States", "Index", "States", new { area = "" }, new { @class = "nav-link text-light" })
                            </li>
                        }
                        @if (User.Identity.Name.ToString().Length > 0)
                        {
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Contacts"
                             ? "nav-item active" : "nav-item")">
                                @Html.ActionLink("My Contacts", "Index", "Contacts", new { area = "" }, new { @class = "nav-link text-light" })
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav> 
    </header>
    
    <div class="container-fluid">
        <main role="main" class="p-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2019 - ContactWeb 2019
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")
    @RenderSection("scripts", required: false)
</body>
</html>
