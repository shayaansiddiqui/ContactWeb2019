@model ContactWeb472.Models.Contact

@{
    ViewBag.Title = "Delete";
}



<h3>Are you sure you want to delete this the contact: @Model.FriendlyName?</h3>
<div>
    <h4>Contact</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FriendlyName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FriendlyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        @if (Model.Birthday != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Birthday)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Birthday)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.PhonePrimary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhonePrimary)
        </dd>
        @if (!string.IsNullOrWhiteSpace(Model.PhoneSecondary))
        {
            <dt>
                @Html.DisplayNameFor(model => model.PhoneSecondary)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PhoneSecondary)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.FriendlyAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FriendlyAddress)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row" style="padding-top: 25px;">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <span>* indicates Required Field</span>
            </div>
        </div>
        <div class="row" style="padding-top: 25px;">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <div class="form-group">
                    <div class="col-md-offset-2">
                        <input type="submit" value="Delete" class="btn btn-delete float-right" style="background-color: #e74c3c;color:white;min-width: 150px;" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="padding-top: 25px;">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default float-right", style = "min-width: 150px;" })
            </div>
        </div>
    }
</div>
